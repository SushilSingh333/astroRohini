---
import { reader } from '../lib/keystatic';

const contactData = await reader.singletons.contact.read();
---

<section id="contact" class="section py-5 urgency">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-lg-6">
                <div class="section-tag">{contactData?.tag || 'Act Now'}</div>
                <h2 class="section-title">{contactData?.title || 'Limited Units Available'}</h2>
                <p class="section-subtitle">{contactData?.subtitle || 'Our team will schedule a private walkthrough'}</p>
                <div class="d-flex gap-3 flex-wrap mt-3">
                    <a href={`tel:${contactData?.phone || '+911234567890'}`} class="btn btn-cta btn-lg">Call Sales</a>
                    <a href="#brochure" class="btn btn-outline-light btn-lg">Download Brochure</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="contact-card reveal" id="brochure">
                    <h5 class="mb-3">Book a site visit</h5>
                    <form class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" placeholder="Your full name" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="tel" class="form-control" placeholder="+91" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" placeholder="you@example.com" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Requirement</label>
                            <select class="form-select">
                                <option>Retail Shop</option>
                                <option>Office Space</option>
                                <option>Corner/Atrium Unit</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-cta w-100">Book Now</button>
                        </div>
                        <div class="col-12 text-center text-muted small">
                            By submitting, you agree to be contacted by our team.
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

